<Page x:Class="Морской_бой.Pages.PagesGame.ChangeGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Морской_бой.Pages.PagesGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Новая игра" Margin="150">

    <Grid>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch">

            <Button    Style="{StaticResource MenuButton}" x:Name="GameFriendButton" Click="GameFriendButton_Click">Игра с другом</Button>
            <Button    Style="{StaticResource MenuButton}" x:Name="ExitButton" Click="ExitButton_Click">Выйти</Button>
            
        </StackPanel>
        
    </Grid>
</Page>
